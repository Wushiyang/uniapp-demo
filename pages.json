{
  "easycom": {
    "^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [{
      "path": "pages/tabbar/home/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/tabbar/form/index",
      "style": {
        "navigationBarTitleText": "表单"
      }
    },
    {
      "path": "pages/tabbar/my/index",
      "style": {
        "navigationBarTitleText": "我"
      }
    },
    {
      "path": "pages/auth/login/index",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/auth/forgetPassword/index",
      "style": {
        "navigationBarTitleText": "忘记密码"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uniapp模板",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8",
    "navigationStyle": "custom"
  },
  "condition": { //模式配置，仅开发期间生效
    "current": 0, //当前激活的模式(list 的索引项)
    "list": [{
      "name": "首页", //模式名称
      "path": "pages/tabbar/home/index", //启动页面，必选
      "query": "" //启动参数，在页面的onLoad函数里面得到
    }]
  },
  "tabBar": {
    "list": [{
        "pagePath": "pages/tabbar/home/index",
        "iconPath": "static/images/home.png",
        "selectedIconPath": "static/images/home-h.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/tabbar/form/index",
        "iconPath": "static/images/attention.png",
        "selectedIconPath": "static/images/attention-h.png",
        "text": "表单"
      },
      {
        "pagePath": "pages/tabbar/my/index",
        "iconPath": "static/images/me.png",
        "selectedIconPath": "static/images/me-h.png",
        "text": "我"
      }
    ]
  }
}
